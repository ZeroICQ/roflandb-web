<!DOCTYPE html>
<html>
<head>
    <title>RoflanDB web</title>
    <meta charset="UTF-8"/>
    <link type="text/css" rel="stylesheet" href="node_modules/bulma/css/bulma.css"/>
    <link type="text/css" rel="stylesheet" href="css/style.css"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script defer src="node_modules/vuex/dist/vuex.js"></script>
    <script defer src="node_modules/vue/dist/vue.js"></script>
    <script defer src="js/app.js"></script>
</head>
<body>

<div class="tile is-ancestor">
    <div class="tile is-vertical is-12 is-parent">
        <div class="tile is-12 is-parent">
            <div class="container is-child">
    
                <div class="field">
                    <label class="label"></label>
                    <div class="control">
                        <div class="select">
                            <select>
                                <option>Select dropdown</option>
                                <option>With options</option>
                            </select>
                        </div>
                    </div>
                </div>
    
    
                <div class="field is-horizontal" id="db-form">
                    <div class="field-label is-normal">
                        <label class="label">Credentials</label>
                    </div>
                    <div class="field-body">
                        <div class="field">
                            <p class="control is-expanded">
                                <input class="input" type="text" placeholder="Username">
                            </p>
                        </div>
                        
                        <div class="field">
                            <p class="control is-expanded">
                                <input class="input" type="password" placeholder="Password">
                            </p>
                        </div>
                    </div>
                </div>
    
    
            </div>
        </div>
    
        <div class="tile is-12 is-parent">
    
            <div class="container is-child">
                <textarea id="query" class="textarea" placeholder="Enter query..." v-model="query"></textarea>
    
                <span v-on:click="submit" id="submit-button" class="button is-success is-fullwidth" :disabled="isLoading">Run query</span>
    
    
                <div v-if="isLoading" id="progress-bar" class="container">
                    <progress class="progress is-info is-large" max="100">45%</progress>
                </div>
    
                <table id="result-table" v-if="!isLoading" class="table is-bordered is-hoverable is-fullwidth">
                    <thead>
                    <th v-for="title in titles">{{title}}</th>
                    </thead>
                    <tbody>
                    <tr v-for="line in data">
                        <td v-for="col in line">{{col}}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


</body>
</html>